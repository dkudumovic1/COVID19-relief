

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en" class="ie_11_scroll">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="hhhwidth=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/assets/css/StyleDugmici.css">
    <title>Početna</title>


    <!--

    App Landing Template

    http://www.templatemo.com/tm-474-app-landing

    -->
    <!-- CSS -->
    <link rel="stylesheet" href="css/template/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/template/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/template/css/templatemo_style.css">
    <script src="https://kit.fontawesome.com/8a08344203.js"></script>
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="favicon.png" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Home -->
    @if (!User.Identity.IsAuthenticated)
    {
        <section id="templatemo_home">
            <div class="container">
                <div class="templatemo_home_inner_wapper">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <h1 class="text-center"> Pomozimo drugima</h1>
                    }


                </div>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="templatemo_home_inner_wapper">
                        <h2 class="text-center"></h2>
                        <p class="text-center">
                            U neizvjesnom periodu naša aplikacija povezuje vrijedne volontere sa osobama kojima je potrebna pomoć u različitim sferama života.
                        </p>
                    </div>
                }



                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="templatemo_home_inner_wapper btn_wapper">
                        <div class="col-sm-6">
                            <a href="#templatemo_features" class="btn col-xs-12 scroll_effect shadow-top-down">
                                <i class="fa fa-align-justify"></i> O nama
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a href="#templatemo_download" class="btn col-xs-12 scroll_effect shadow-top-down">
                                <i class="fa fa-hands-helping"></i> Pridružite se
                            </a>
                        </div>
                    </div>
                }
                <div id="pocetna">
                    <div class="jumbotron centriraj">
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Korisnik1") || User.IsInRole("Korisnik2")))
                        {
                            <p><a asp-action="Details" asp-controller="Korisniks" class="btn btn-primary" role="button" id="dugme1" style="background-color: rgba(69,90,100,255); color: white;">Pregled profila</a></p>
                            <p><a asp-action="Create" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Kreiraj zahtjev</a></p>
                            <p><a asp-action="Index" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color:rgba(69,90,100,255);color: white;">Pregled mojih zahtjeva</a></p>
                        }

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Volonter1") || User.IsInRole("Volonter2")))
                        {
                            <p><a asp-action="Details" asp-controller="Volonters" class="btn btn-primary" role="button" id="dugme1" style="background-color: rgba(69,90,100,255);color: white;">Pregled profila</a></p>
                            <p><a asp-action="Index" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Pregled svih zahtjeva</a></p>
                        }

                    </div>
                </div>
            </div>
        </section>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <section id="templatemo_home2">
            <div class="container">
                <div class="templatemo_home_inner_wapper">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <h1 class="text-center add-shadow"> Dobro došli!</h1>
                    }

                </div>

                @if (User.Identity.IsAuthenticated && (User.IsInRole("Volonter1") || User.IsInRole("Volonter2")))
                {
                    <div class="templatemo_home_inner_wapper">
                        <h2 class="text-center"></h2>
                        <p class="text-center add-shadow">
                            Hvala Vam što odvajate svoje vrijeme da pružite pomoć onima kojima je to potrebno!
                        </p>
                    </div>
                }

                @if (User.Identity.IsAuthenticated && (User.IsInRole("Korisnik1") || User.IsInRole("Korisnik2")))
                {
                    <div class="templatemo_home_inner_wapper">
                        <h2 class="text-center"></h2>
                        <p class="text-center add-shadow">
                            Naši volonteri su uvijek spremni da Vam pomognu!
                        </p>
                    </div>
                }


                <div class="pocetna">
                    <div class="jumbotron centriraj">
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Korisnik1") || User.IsInRole("Korisnik2")))
                        {
                            <p><a asp-action="Details" asp-controller="Korisniks" class="btn btn-primary" role="button" id="dugme1" style="background-color: rgba(69,90,100,255); color: white;">Pregled profila</a></p>
                            <p><a asp-action="Create" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Kreiraj zahtjev</a></p>
                            <p><a asp-action="Index" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color:rgba(69,90,100,255);color: white;">Pregled mojih zahtjeva</a></p>

                        }

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Volonter1") || User.IsInRole("Volonter2")))
                        {
                            <p><a asp-action="Details" asp-controller="Volonters" class="btn btn-primary" role="button" id="dugme1" style="background-color: rgba(69,90,100,255);color: white;">Pregled profila</a></p>
                            <p><a asp-action="Index" asp-controller="Zahtjevs" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Pregled svih zahtjeva</a></p>
                            <p><a asp-action="PregledZahtjeva" asp-controller="Volonters" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Prikaz mape zahtjeva</a></p>
                        }
                        <p><a asp-action="Poruke" asp-controller="Korisniks" class="btn btn-primary" role="button" id="dugme" style="background-color: rgba(69,90,100,255);color: white;">Motiviraj se!</a></p>

                    </div>
                </div>
            </div>
        </section>
    }

    <!-- Features -->
    <section id="templatemo_features">
        <div class="container-fluid">
            <header class="template_header">
                <h1 class="text-center"><span>...</span> O nama <span>...</span></h1>
            </header>
            <div class="col-sm-12">
                <div class="col-sm-6 col-lg-3 feature-box">
                    <div class="feature-box-inner">
                        <div class="feature-box-icon">
                            <i class="fa fa-people-arrows"></i>
                        </div>
                        <p>
                            Nudimo umrežavanje između naših vrijednih volontera i osoba kojima je potreba pomoć.
                        </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 feature-box">
                    <div class="feature-box-inner">
                        <div class="feature-box-icon">
                            <i class="fa fa-handshake"></i>
                        </div>
                        <p>
                            Poslije jednostavne registracije postajete član naše zajednice.
                        </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 feature-box">
                    <div class="feature-box-inner">
                        <div class="feature-box-icon">
                            <i class="fa fa-search"></i>
                        </div>
                        <p>
                            Ukoliko tražite pomoć, jednostavno potražite svoju kategoriju i kontaktirajte volontera.
                        </p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3 feature-box">
                    <div class="feature-box-inner">
                        <div class="feature-box-icon">
                            <i class="fa fa-clock"></i>
                        </div>
                        <p>
                            Ukoliko imate vremena za volonitiranje, priložite svoje podatke i sačekajte da Vas kontaktiramo
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Download -->
    <section id="templatemo_download">

        <div class="container">
            <header class="template_header">
                @if (!User.Identity.IsAuthenticated)
                {
                    <h1 class="text-center"><span>...</span> Pridružite nam se <span>...</span></h1>
                }


            </header>
            <div class="templatemo_download_text_wapper">
                @if (!User.Identity.IsAuthenticated)
                {
                    <p>
                        Priključite se velikoj zajednici osoba koje se međusobno pomažu i osiguravaju bolje uslove za život u vrijeme pandemije.
                    </p>
                }


            </div>

            @if (!User.Identity.IsAuthenticated)
            {
                <div id="registerDiv">

                    <a id="registerBtn" class="btn col-xs-12 scroll_effect shadow-top-down" asp-area="Identity" asp-page="/Account/Register">
                        <i class="fa fa-hands-helping"></i> Registrujte se
                    </a>
                </div>
            }




        </div>


    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 footer-copyright">
                    <p>Copyright &copy; 2021 <a href="#" target="_parent">HackAtHome</a></p>
                </div>
            </div>
        </div>
    </footer>
    <!-- require plugins -->
    <!-- template mo config script -->
</body>
</html>
