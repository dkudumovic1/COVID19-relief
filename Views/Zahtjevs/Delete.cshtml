        @if (Model.Opis.Contains("+"))
        {
            var a = Model.Opis;
            var niz = a.Split("+");
            var ime = niz[niz.Length - 1];
            <dt class="col-sm-2">
                Ime i prezime korisnika:
            </dt>
            <dd class="col-sm-10">
                @ime
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tutor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tutor)
        </dd>
