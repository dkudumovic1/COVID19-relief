@model HackAtHome.Models.Zahtjev

@{
    ViewData["Title"] = "Delete";
}

@if (User.IsInRole("Volonter1") || User.IsInRole("Volonter2"))
{
    <h1>Prihvati zahtjev</h1>
}
else
{
    <h1>Obriši zahtjev</h1>
}



