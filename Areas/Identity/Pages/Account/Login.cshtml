<body>



    <section id="templatemo_contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <header class="template_header">
                        <h1 class="text-center"><span>...</span> Prijavite se <span>...</span></h1>
                    </header>

                </div>
            </div>
            <form role="form" action="#" method="post">

                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <div class="input-group-addon"><i class="fa fa-at"></i></div>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">

                        <div class="input-group-addon"><i class="fa fa-ellipsis-h"></i></div>
                        <input asp-for="Input.Password" class="form-control" placeholder="Lozinka" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-6 col-xs-offset-6">
                        <button type="submit" class="form-control">Potvrdi</button>
                    </div>
                </div>
            </form>

        </div>
    </section>


</body>
</html>



@section Scripts {
